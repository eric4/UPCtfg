<script>

    function getChecked(){
	var c = '';
	var element = document.getElementById("rates").getElementsByTagName("input");
	for(var i=element.length-2; i>=0; i--) {
	    if(element[i].checked){
		c = element[i].value;
	    }
	}
	var extra = document.getElementById("extra").value;
	$('#check').val( c );
	$('#e').val( extra );
    };

</script>

