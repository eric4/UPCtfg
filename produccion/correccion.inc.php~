<?php

$id_directorio = $_SESSION['directori'];
if($id_directorio != '') {

if(isset($_POST['adelante'])) {
	$total_alumnos = $_POST['total_alumnos'];
	$total_puntuacion = $_POST['total_puntuacion'];
	$i = $_POST['i'];
