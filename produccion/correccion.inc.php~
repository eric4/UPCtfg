	$total_alumnos = count($_SESSION['arrayAlumnos']);
	$total_puntuacion = count($_SESSION['arrayPuntuacion']);

	Conexion::cerrar_conexion();
}
	$arrayPuntuacion = $_SESSION['arrayPuntuacion'];
